PRAGMA encoding = 'UTF-8';

CREATE TABLE imprimeurs (
	id INTEGER PRIMARY KEY,
	prenom TEXT,
	nom TEXT NOT NULL,
	birth TEXT,
	death TEXT,
	UNIQUE(id) ON CONFLICT REPLACE
	);

CREATE TABLE livres (
	id INTEGER PRIMARY KEY,
	title TEXT NOT NULL,
	print_date TEXT NULL,
	print_place TEXT NULL,
	printer1 INTEGER NULL REFERENCES imprimeurs(id),
	printer2 INTEGER NULL REFERENCES imprimeurs(id),
	printer3 INTEGER NULL REFERENCES imprimeurs(id)
	);

CREATE TABLE marques (
	img_id INTEGER PRIMARY KEY,
	image TEXT NOT NULL,
	livre_id INTEGER NOT NULL REFERENCES livres(id)
	);


